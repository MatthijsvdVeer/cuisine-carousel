@using MudExtensions

<MudAnimate
    @ref="Animate" Selector=".fade-in" Duration="duration" AnimationType="_animationType"
    Value="value" ValueSecondary="valueSecondary" Hover="hover" Delay="delay"
    Infinite="infinite" IterationCount="iterationCount" AnimationTiming="_animationTiming"
    AnimationDirection="_animationDirection" AnimationFillMode="_animationFillMode"
    Paused="paused"/>

@code {
    MudAnimate? Animate { get; set; } = new();
    readonly double duration = 2;
    readonly double delay = 0;
    readonly int iterationCount = 1;
    bool hover;
    bool infinite;
    readonly AnimationType _animationType = AnimationType.Fade;
    readonly AnimationTiming _animationTiming = AnimationTiming.EaseInOut;
    readonly AnimationDirection _animationDirection = AnimationDirection.Normal;
    readonly AnimationFillMode _animationFillMode = AnimationFillMode.None;
    bool paused;
    readonly double value = 360;
    double? valueSecondary;
}